<h1><%= current_user.name %></h1>
<br />
<% if current_user.items.count == 0  %>
    <h4>You have no current items!</h4>
<% end %>

<ul class="collection with-header">
    <li class="collection-header"><h4>Tasks</h4></li>
    <% current_user.items.each do |item| %>
        <li class="collection-item"><%= render item %></li>
    <% end %>
</ul>
<%= render partial: 'items/form', locals: { item: Item.new } %>