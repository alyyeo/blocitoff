<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
  <nav role="navigation">
    <%= link_to "Blocitoff", root_path, class: 'brand-logo' %>
    <div class="right">
      <% if user_signed_in? %>
        Signed in as: <strong><%= current_user.email %></strong> |
        <%= link_to "Edit Profile", edit_user_registration_path, class: 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'navbar-link' %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, class: 'navbar-link' %> -
        <%= link_to "Sign In", new_user_session_path, class: 'navbar-link' %>
      <% end %>
    </div>
  </nav>
  
  <div class="flash">
    <% if flash[:notice] %>
      <script>
        Materialize.toast('<%= flash[:notice] %>', 1000)
      </script>
    <% elsif flash[:error] %>
      <script>
        Materialize.toast('<%= flash[:error] %>', 1000)
      </script>
    <% end %>
  </div>
  
  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
